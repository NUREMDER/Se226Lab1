#include <iostream>
using namespace std;

int main() {
    string name;
    cout << "What is your name? " << endl;
    cin >> name;
    cout << "Hello " << name << "." << endl;



    string student_id;
    cout << "What is your Student ID? " << endl;
    cin >> student_id;
    cout << "Your ID is " << student_id << "." << endl;



    double var1, var2;
    cout << "Enter the first number: ";
    cin >> var1;
    cout << "Enter the second number: ";
    cin >> var2;


    double sum_result = var1 + var2;
    double diff_result = var1 - var2;
    double prod_result = var1 * var2;

    
    cout << "var1: " << var1 << ", var2: " << var2 << endl;
    cout << "Sum: " << sum_result << ", Difference: " << diff_result << ", Product: " << prod_result << endl;


    double lab_grade, midterm_grade, final_grade;
    cout << "Enter your lab grade (out of 100): ";
    cin >> lab_grade;
    cout << "Enter your midterm grade (out of 100): ";
    cin >> midterm_grade;
    cout << "Enter your final grade (out of 100): ";
    cin >> final_grade;

    double last_score = (lab_grade * 0.25) + (midterm_grade * 0.35) + (final_grade * 0.40);
    cout << name << ", your final course score is: " << last_score << endl;

    cout << "*\n**\n***\n**\n*" << endl;

    return 0;
}
